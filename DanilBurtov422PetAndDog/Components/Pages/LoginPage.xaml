<Page x:Class="DanilBurtov422PetAndDog.Components.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DanilBurtov422PetAndDog.Components.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage" Background="White">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center">Вход</TextBlock>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <TextBlock Text="Login" VerticalAlignment="Center"/>
                <TextBox Name="LoginTb" Width="200" Margin="10"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <TextBlock Text="Password" VerticalAlignment="Center"/>
                <TextBox Name="PasswordTb" Width="200" Margin="10"/>
            </StackPanel>
            <Button Margin="10 0 10 0" Content="Enter">
                
            </Button>
        </StackPanel>
    </Grid>
</Page>
